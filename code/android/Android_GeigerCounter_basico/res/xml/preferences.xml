	<!--
		This is a primitive example showing the different types of preferences
		available.
	-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/main_settings">

		<CheckBoxPreference android:key="cFullscreen"
			android:title="@string/fullscreen" android:summary="@string/fullscreen_explanation" /> 
			
		<CheckBoxPreference android:key="cLock"
			android:title="@string/lock" android:summary="@string/lock_explanation" /> 
	
		<ListPreference android:key="cRotateOption" 
			android:entries="@array/listRotationPreference"
		 	android:entryValues="@array/listRotationPreferenceValue" 
			android:title="@string/rotate" 
			android:defaultValue="2" 
			android:summary="@string/rotate_explanation" />

	</PreferenceCategory>



	<!--  about  -->
	<PreferenceCategory android:title="@string/about">

		<Preference android:title="@string/manual" android:key="cManual">
			<intent android:action="net.sweetmonster.android.app.oscdroid.ui.ManualActivity" />

		</Preference>


		<Preference android:title="@string/about" android:key="cAbout">

			<!--
				<intent android:action="android.intent.action.VIEW"
				android:data="http://victordiaz.github.com" />
			-->

		</Preference>


	</PreferenceCategory>

</PreferenceScreen>
